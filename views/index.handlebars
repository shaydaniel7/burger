<h1>Eat Da Burger!</h1>

<h2>Create your own burger then devour it</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
    <button type="button" class="btn btn-success"><span> EAT </span></button>
    <hr>
    {{/unless}}
    {{/each}}
      {{!-- {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}} --}}
</ul>

{{!-- <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul> --}}

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add Burger</button>
</form>
