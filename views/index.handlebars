<h1>Eat Da Burger</h1>
<h2>Create your own burger - then eat it!</h2>

<div class="container">
  <div class="row">
    <div class="container">
      <br />
      <div class="row justify-content-center">

        <form action="/api/burgers" method="POST" class="card card-sm burger-form mb-5">
          <div class="card-body row align-items-center">
            <div class="col-auto">
            </div>
            <div class="col">
              <input id="burgerName" type="text" name="burgerName"
                class="form-control form-control form-control-lg form-control-borderless" placeholder="create a burger">
            </div>
            <div class="col-auto">
              <button class="btn btn-lg btn-dark" type="submit"> go </button>
            </div>
          </div>
        </form>


      </div>
      <div class="row">
        <div class="col-12 col-md-6">{{#each burgers}} {{#unless this.devoured}}
          <div class="card bg-light card-body mb-3 bg-faded p-1">
            <div class="d-inline-flex align-items-center">
              <h6 class="mr-auto mt-2 ml-2">{{id}}. {{this.burgerName}}</h6>
              <button class="btn btn-danger btn-eat" data-id="{{id}}" data-eaten="{{devoured}}"> eat it
              </button>
            </div>
          </div> {{/unless}} {{/each}} </div>

        <div class="col-12 col-md-6">{{#each burgers}} {{#if this.devoured}}
          <div class="card bg-light card-body mb-3 bg-faded p-1">
            <div class="d-inline-flex align-items-center">
              <h6 class="mr-auto mt-2 ml-2">{{id}}. {{this.burgerName}}</h6>
              <button class="fas fa-trash-alt btn btn-danger btn-delete" data-id="{{id}}"> 
              </button>
            </div>
          </div> {{/if}} {{/each}} </div>
      </div>
    </div>
  </div>

