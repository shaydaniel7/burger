	<script>
		$(".btn-eat").on("click", function(event){
			const id = $(this).data("id");
			const eat = $(this).data("eaten");
			const eaten = {
				devoured: eat
			};

			$.ajax(`/api/burgers/${id}`, {
				type: "PUT",
				data: eaten
			}).then(
				function(){
					location.reload();
				}
			)
		})

	</script>
